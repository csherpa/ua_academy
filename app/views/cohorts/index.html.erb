<div id='cohort'>
<h1>Cohorts</h1>

<%= link_to 'Add Cohort', new_cohort_path, class: "btn btn-outline-primary btn-lg" %>
<div id='cohort-form' style='display:none;'></div>

<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th scope="col">Title</th>
      <th scope="col">Start Date</th>
      <th scope="col">End Date</th>
    </tr>
  </thead>

  <tbody id='my-cohorts'>
        <% @cohorts.each do |cohort| %>
          <%= render cohort %>
        <% end %>
  </tbody>
</table>
</div>

