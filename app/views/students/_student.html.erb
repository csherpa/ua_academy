<tr id= "student-<%= student.id %>">
  <td><%= student.id %></td>
  <td><%= student.firstname %></td>
  <td><%= student.lastname %></td>
  <td><%= student.quirk %></td>
  <td><%= student.age%></td>
  <td><%= link_to 'Show', student_path(student), class: "btn btn-outline-info btn-sm" %>
  <td><%= link_to 'Edit', edit_student_path(student), class: "btn btn-outline-secondary btn-sm"%></td>
  <td><%= link_to 'Remove', student_path(student),class: "btn btn-outline-danger btn-sm",remote: true, method: :delete,  data: { confirm: 'Are you sure?' } %></td>
</tr>
