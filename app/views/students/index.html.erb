<div id='student'>
<h1>Students</h1>

<%= link_to 'Add Student', new_student_path, class: "btn btn-outline-primary btn-lg" %>

<div id="student-form" style="display:none;">
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Quirk</th>
    </tr>
  </thead>
 
  <tbody id="all-students">

    <% @students.each do |student| %> 
      <%= render student %>
    <% end %>
  
  </tbody>
</table>
</div>