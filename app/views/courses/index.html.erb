<div id='course'>
<h1>Course</h1>

<%= link_to "Add Course", new_course_path, class: "btn btn-outline-primary btn-lg"%>

<div id= 'course-form' style='display:none;'></div>

<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Hours</th>
    </tr>
  </thead>

  <tbody id = 'all-courses'>
        <% @courses.each do |course| %>
          <%= render course %>   
        <% end %>
  </tbody>
</table>

</div>