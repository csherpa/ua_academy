<tr id= "course-<%= course.id %>">
  <td><%= course.id %></td>
  <td><%= course.title %></td>
  <td><%= course.hours%></td>
  <td><%= link_to 'Show', course_path(course), class: "btn btn-outline-info btn-sm"%></td>
  <td><%= link_to 'Edit', edit_course_path(course), class: "btn btn-outline-secondary btn-sm"%></td>
  <td><%= link_to 'Remove', course_path(course),class: "btn btn-outline-danger btn-sm", method: :delete, remote: true, data: { confirm: 'Are you sure?' } %></td>
</tr>

